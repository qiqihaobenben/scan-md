{
  "name": "scan-md",
  "version": "1.0.0",
  "description": "CLI tool for scanning markdown files and generating structured output",
  "main": "dist/cli.js",
  "bin": {
    "scan-md": "dist/cli.js"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --format=cjs --outfile=dist/cli.js",
    "start": "tsx src/cli.ts",
    "test": "vitest run",
    "test:e2e": "vitest run test/e2e/cli.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "markdown",
    "cli",
    "scanner",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "@commander-js/extra-typings": "^11.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.4",
    "@vitest/coverage-v8": "^1.0.4",
    "esbuild": "^0.19.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
